{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./*"],
      "@constants/*": ["./app/constants/*"],
      "@components/*": ["./components/*"],
      "@utils/*": ["./utils/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types/env.d.ts", "./types"]
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
